<ui:Page x:Class="ExamSettings.Pages.Home"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:ExamSettings.Pages"
         xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
         mc:Ignorable="d" 
         d:DesignHeight="360" d:DesignWidth="640"
         Foreground="SeaGreen"
         Title="Home">

    <Grid>
        <Rectangle Margin="10" Stroke="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ui:Page}, Path=Foreground}" StrokeThickness="2"
                RadiusX="8" RadiusY="8" StrokeDashArray="4 2"/>
        <TextBlock Text="Home" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
    </Grid>
</ui:Page>